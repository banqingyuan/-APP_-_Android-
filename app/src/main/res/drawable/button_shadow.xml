<!-- 阴影部分 -->
    <!-- left代表右边的阴影宽度...  也就是相对应的offset，solid中的颜色是阴影的颜色，也可以设置角度等等 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

<item
    android:left="2dp"
    android:top="2dp"
    android:right="2dp"
    android:bottom="2dp">
    <shape android:shape="rectangle" >

        <gradient
            android:angle="270"
            android:endColor="#eeeeee"
            android:startColor="#eeeeee"/>

        <corners
            android:bottomLeftRadius="3dip"
            android:bottomRightRadius="3dip"
            android:topLeftRadius="3dip"
            android:topRightRadius="3dip" />
    </shape>
</item>

<!-- 背景部分 -->
<!-- 形象的表达：bottom代表背景部分在上边缘超出阴影的高度，right代表背景部分在左边超出阴影的宽度... -->
<item
    android:left="1dp"
    android:top="0dp"
    android:right="4dp"
    android:bottom="6dp">
    <shape android:shape="rectangle" >

        <gradient
            android:angle="270"
            android:endColor="#ffffff"
            android:startColor="#FFFFFF" />

        <corners
            android:bottomLeftRadius="6dip"
            android:bottomRightRadius="6dip"
            android:topLeftRadius="6dip"
            android:topRightRadius="6dip" />
    </shape>
</item>
</layer-list>